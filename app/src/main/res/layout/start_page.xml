<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_page_back">

    <TextView
        android:id="@+id/SelectModeTextView"
        android:layout_width="191dp"
        android:layout_height="59dp"
        android:background="@color/start_page_back"
        android:fontFamily="@font/amita"
        android:text="@string/select_mode_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/imageButtonNormalMode"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectModeTextView"
        app:layout_constraintVertical_bias="0.518"
        app:srcCompat="@drawable/cloud_right" />

    <ImageView
        android:id="@+id/imageButtonChemistryMode"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:rotationX="-12"
        android:rotationY="4"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectModeTextView"
        app:srcCompat="@drawable/cloud_left" />

    <TextView
        android:id="@+id/textViewNormalMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graduate"
        android:rotation="-25"
        android:text="@string/normal_mode_button"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonNormalMode"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonNormalMode"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/imageButtonNormalMode"
        app:layout_constraintTop_toTopOf="@+id/imageButtonNormalMode"
        app:layout_constraintVertical_bias="0.39999998" />

    <TextView
        android:id="@+id/textViewChemistryMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graduate"
        android:rotation="25"
        android:text="@string/chemistry_mode_button"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonChemistryMode"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonChemistryMode"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="@+id/imageButtonChemistryMode"
        app:layout_constraintTop_toTopOf="@+id/imageButtonChemistryMode"
        app:layout_constraintVertical_bias="0.32999998" />

    <ImageView
        android:id="@+id/cursor1"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="520dp"
        android:contentDescription="@string/app_name"
        android:rotation="33"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonNormalMode"
        app:layout_constraintEnd_toStartOf="@+id/SelectModeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cursor" />

    <ImageView
        android:id="@+id/cursor2"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/app_name"
        android:rotation="-33"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonChemistryMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SelectModeTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cursor" />

</androidx.constraintlayout.widget.ConstraintLayout>